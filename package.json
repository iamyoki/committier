{
  "name": "committier",
  "version": "0.0.2",
  "description": "Format and auto-fix commit messages",
  "keywords": [
    "git",
    "commit",
    "cli",
    "commitlint",
    "conventional-commits",
    "conventional-changelog"
  ],
  "homepage": "https://github.com/iamyoki/committier",
  "bugs": {
    "url": "https://github.com/iamyoki/committier/issues"
  },
  "license": "ISC",
  "author": "iamyoki",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "development": "./src/index.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./commitlint-emoji-parser": "./commitlint-emoji-parser.js"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "committier": "dist/bin/committier.js"
  },
  "files": [
    "./dist",
    "./commitlint-emoji-parser.js"
  ],
  "scripts": {
    "build": "tsc -b ./tsconfig.build.json",
    "clean": "del **/{dist,*.tgz,*.tsbuildinfo}",
    "commit": "node --import=tsx ./src/bin/committier.ts commit",
    "committier": "node --import=tsx ./src/bin/committier.ts",
    "dev": "node --import=tsx --conditions=development --watch ./src/app/main.ts",
    "format": "prettier --write --cache .",
    "lint": "eslint --cache",
    "prepare": "husky",
    "start": "node ./dist/app/main.js",
    "test": "node --import=tsx --conditions=development --test ./test/**",
    "test:cov": "pnpm test --experimental-test-coverage",
    "test:watch": "pnpm test --watch",
    "typecheck": "tsc -b"
  },
  "dependencies": {
    "@clack/prompts": "1.0.0-alpha.6",
    "cosmiconfig": "^9.0.0",
    "picocolors": "^1.1.1",
    "read-package-up": "^12.0.0",
    "simple-git": "^3.30.0",
    "yargs": "^18.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@eslint/css": "^0.14.1",
    "@eslint/js": "^9.39.1",
    "@eslint/json": "^0.14.0",
    "@eslint/markdown": "^7.5.1",
    "@nx/js": "^22.1.3",
    "@types/node": "^24.10.1",
    "@types/prompts": "^2.4.9",
    "@types/tmp": "^0.2.6",
    "@types/yargs": "^17.0.35",
    "chalk": "^5.6.2",
    "del-cli": "^7.0.0",
    "eslint": "^9.39.1",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "nx": "22.1.3",
    "prettier": "~3.6.2",
    "prettier-plugin-organize-imports": "^4.3.0",
    "prettier-plugin-packagejson": "^2.5.19",
    "prompts": "^2.4.2",
    "tmp": "^0.2.5",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.0"
  },
  "packageManager": "pnpm@10.24.0+sha512.01ff8ae71b4419903b65c60fb2dc9d34cf8bb6e06d03bde112ef38f7a34d6904c424ba66bea5cdcf12890230bf39f9580473140ed9c946fef328b6e5238a345a",
  "engines": {
    "node": ">=24"
  },
  "nx": {}
}
